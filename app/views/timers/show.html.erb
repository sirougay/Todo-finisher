<h1>ストップウォッチ</h1>
<h2 id="timerStatus" data-pomodoro='<%=@timer.pomodoro%>' data-short-rest='<%=@timer.short_rest%>' data-long-rest='<%=@timer.long_rest%>'></h2>
<% if user_signed_in? %>
  <h3 id="current-task">
  </h3>
<% end %>
<p id="timerText"><%=@timer.pomodoro/60%>分</p>
<button id="start"></button>
<button id="reset">リセット</button>
<% if user_signed_in? %>
	<button id="end" class="hidden">タスクの終了</button>
<% end %>