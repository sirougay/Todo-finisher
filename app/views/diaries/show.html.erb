<% if 1==2 %>
  <p>
    まだ本日の記録はありません。
  </p>
<% else %>

  <h2>
    完了したタスク
  </h2>
  <% @tasks.each do |task| %>
    <p>
      <%= task.content %>
      <% if task.spent_time.present? %>
        <%= task.spent_time / 1000 %>秒
      <% end %>
    </p>
  <% end %>

<% end %>

<%= form_for(@diary) do |f| %>
  <%= f.text_area :content %>
  <%= f.submit "保存" %>
<% end %>